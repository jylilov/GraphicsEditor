<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<template class="DrawingPane" parent="GtkBin">
		<child>
			<object id="scrolled_window" class="GtkScrolledWindow">
				<signal name="scroll-event" handler="scrolled_window_scroll_event_handler"/>
				<child>
					<object id="viewport" class="GtkViewport">
					 	<child>
						 	<object id="fixed" class="GtkFixed">
					 			<property name="valign">center</property>
								<property name="halign">center</property>
									<child>
									<object id="internal_frame" class="GtkFrame">
										<child>
											<object id="drawing_area" class="GtkDrawingArea">
												<signal name="draw" handler="draw_handler"/>
												<signal name="configure-event" handler="configure_event_handler"/>
												<signal name="scroll-event" handler="drawing_area_scroll_event_handler"/>
												<signal name="motion-notify-event" handler="motion_notify_event_handler"/>
												<signal name="button-press-event" handler="button_press_event_handler"/>
											</object>
										</child>
									</object>
								</child>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>