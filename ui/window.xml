<?xml version="1.0" encoding="UTF-8"?>

<interface>
	<template class="GraphicsEditorWindow" parent="GtkApplicationWindow">
		<property name="title">Graphics Editor</property>
		<property name="default-width">800</property>
		<property name="default-height">600</property>
		<child>
			<object class="GtkVBox" id="main_vbox">
				<property name="visible">true</property>
				<child>
					<object class="GtkPaned" id="paned">
						<property name="visible">true</property>
						<child>
							<object class="GtkToolPalette" id="tool_palette">
							</object>
						</child>
						<child>
							<object class="GtkNotebook" id="notebook">
								<property name="visible">true</property>
								<child>
									<object class="DrawingPane" id="drawing_area">
										<property name="visible">true</property>
									</object>
								</child>
								<child type="tab">
									<object class="GtkLabel" id="notebook-tab">
										<property name="visible">true</property>
										<property name="label">Tab</property>
									</object>
								</child>
							</object>
							<!--<object id="drawing_area" class="DrawingPane">
								<property name="visible">true</property>
							</object>-->
						</child>
					</object>
				</child>
				<child>
					<object class="GtkStatusbar" id="statusbar">
						<property name="visible">true</property>
					</object>
					<packing>
						<property name="expand">false</property>
					</packing>
				</child>
			</object>
		</child>
	</template>
</interface>
